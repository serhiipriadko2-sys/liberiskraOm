# Dockerfile для 2FA системы экосистемы Искра
FROM python:3.11-slim

# Метаданные
LABEL maintainer="Claude Code Security Agent <security@iskra.ai>"
LABEL description="2FA система для экосистемы Искра"
LABEL version="1.0"

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Создание пользователя для запуска приложения
RUN groupadd -r iskra2fa && useradd -r -g iskra2fa -m -s /bin/bash iskra2fa

# Создание директории приложения
WORKDIR /app

# Установка Python зависимостей
COPY requirements_2fa.txt /app/
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements_2fa.txt

# Копирование исходного кода
COPY iskra_2fa/ /app/iskra_2fa/
COPY config/ /app/config/
COPY scripts/ /app/scripts/
COPY templates/ /app/templates/ 2>/dev/null || mkdir -p /app/templates

# Создание директорий для логов и данных
RUN mkdir -p /app/logs /app/data /app/ssl && \
    chown -R iskra2fa:iskra2fa /app

# Переключение на пользователя приложения
USER iskra2fa

# Переменные окружения
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/health', timeout=5)" || exit 1

# Порт приложения
EXPOSE 8000

# Скрипт инициализации
COPY scripts/init_2fa_system.sh /app/scripts/init_2fa_system.sh
RUN chmod +x /app/scripts/init_2fa_system.sh

# Команда запуска
CMD ["./scripts/init_2fa_system.sh"]
